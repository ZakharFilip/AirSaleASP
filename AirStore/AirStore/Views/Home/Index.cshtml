@model IEnumerable<AirStore.Models.SuperBusket>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="Logout" method="post">
        <button type="submit" class="btn btn-link">Logout</button>
    </form>
}
else
{
    <a asp-action="Login">Login</a>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Visibility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.IdUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.IdProduct)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdSuperBasket">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdSuperBasket">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdSuperBasket">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>